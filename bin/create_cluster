if [ $# -lt 1 ] && [ -z ${WADAL_PROF} ]; then
    echo 'enter profile or specify WADAL_PROF envvar'
    exit 0
fi

if [ -z ${WADAL_PROF} ]; then
    PROF=$1
else
    PROF=${WADAL_PROF}
fi

if [ -f "clusters/${PROF}_cluster.id" ]; then
    echo "cluster '$PROF' already exists"
    exit 0
fi

source profiles/$PROF

if [ -z ${TASK_SPOT_BID_PRICE+x} ];
then
    BidKeyVal=""
 else
    BidKeyVal=",BidPrice=$TASK_SPOT_BID_PRICE"
 fi

case "$PLATFORM" in

py) source bin/_create_py
  ;;
r) source bin/_create_r
  ;;
*) echo "Invalid option"
 ;;
esac
